<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shabbir.mathgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.shabbir.mathgame.MainQuestionActivity"
            android:screenOrientation="portrait"/>

        <activity android:name="com.shabbir.mathgame.LoseActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.shabbir.mathgame.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
           >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>

            </intent-filter>

        </activity>
        <activity android:name="com.shabbir.mathgame.WinActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >
        </activity>

    </application>

</manifest>